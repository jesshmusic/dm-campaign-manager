<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><%= link_to 'Dashboard', dashboard_path %></li>
    <li class="breadcrumb-item active" aria-current="page">Equipment</li>
  </ol>
</nav>

<h1>Equipment</h1>
<%= render 'shared/search_form', url: items_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Sub category</th>
      <th>Cost</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.category %></td>
        <td><%= item.sub_category %></td>
        <td><%= "#{item.cost_value}#{item.cost_unit}" %></td>
        <td><%= item.weight %></td>
        <td><%= link_to 'Show', item, class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-sm btn-success" %></td>
        <td><%= link_to 'Destroy', item, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

