<div class="nested-fields p-2 mb-2 border bg-light">
  <div class="d-flex align-items-end">
    <%= f.association :monster,
                      collection: Monster.all.map { |monster| ["#{monster.name}, CR #{monster.challenge_rating}", monster.id] },
                      include_blank: false,
                      include_hidden: false,
                      input_html: {class: "monster-select"},
                      wrapper_html: {class: 'mr-3'} %>
    <%= f.input :number_of_monsters, wrapper_html: {class: 'mr-3'} %>
    <%= link_to_remove_association "Remove", f, class: "btn btn-warning mb-3" %>
  </div>
</div>