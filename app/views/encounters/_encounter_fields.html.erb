<div class="nested-fields p-3 border my-3 bg-white">
  <div class="form-inputs">
    <div class="form-row">
      <div class="col">
        <%= f.input :name %>
      </div>
    </div>
    <div class="form-row">
      <div class="col">
        <%= f.input :description %>
      </div>
    </div>
    <%= f.hidden_field :xp, value: f.object.xp || 0 %>
    <div class="form-row">
      <div class="col">
        <%= f.input :copper_pieces %>
      </div>
      <div class="col">
        <%= f.input :silver_pieces %>
      </div>
      <div class="col">
        <%= f.input :electrum_pieces %>
      </div>
      <div class="col">
        <%= f.input :gold_pieces %>
      </div>
      <div class="col">
        <%= f.input :platinum_pieces %>
      </div>
    </div>
    <div class="form-row">
      <button class="btn btn-sm btn-link" id="randomIndividualTreasureButton">Random Individual Treasure</button>
    </div>
    <div class="py-3 mb-3" id="equipment_items_container">
      <h4>Treasure</h4>
      <%= f.simple_fields_for :equipment_items do |equipment_item_form| %>
        <%= render '/items/equipment_item_fields', f: equipment_item_form %>
      <% end %>
      <div class='links'>
        <%= link_to_add_association 'Add Equipment', f, :equipment_items, class: "btn btn-info", partial: '/items/equipment_item_fields' %>
      </div>
    </div>
<!--    TODO: Add Equipment Items-->

    <h4>Monsters</h4>
    <div class="form-row">
      <div class="p-3 mb-3" id="encounter_monsters_container">
        <%= f.simple_fields_for :encounter_monsters do |encounter_monster_form| %>
          <%= render '/encounters/encounter_monster_fields', f: encounter_monster_form %>
        <% end %>
        <div class='links'>
          <%= link_to_add_association 'Add Monster',
                                      f,
                                      :encounter_monsters,
                                      class: "btn btn-info",
                                      partial: 'encounters/encounter_monster_fields' %>
        </div>
      </div>
    </div>
    <div class="form-row">
      <div class="col">
        <%= link_to_remove_association "Remove Encounter", f, class: "btn btn-warning mb-3" %>
      </div>
    </div>
  </div>
</div>

<script>
  const encounterXP = $('#adventure_encounters_attributes_<%= f.index %>_xp').val();
  const copperInput = $('#adventure_encounters_attributes_<%= f.index %>_copper_pieces');
  const silverInput = $('#adventure_encounters_attributes_<%= f.index %>_silver_pieces');
  const electrumInput = $('#adventure_encounters_attributes_<%= f.index %>_electrum_pieces');
  const goldInput = $('#adventure_encounters_attributes_<%= f.index %>_gold_pieces');
  const platinumInput = $('#adventure_encounters_attributes_<%= f.index %>_platinum_pieces');

  $('#randomIndividualTreasureButton').on('click', function(event) {
    event.preventDefault();
    $.ajax({
      type: 'GET',
      url: '/random_individual_treasure',
      data: {
        xp: encounterXP
      }
    }).done(function(response) {
      copperInput.val(response.copper_pieces);
      silverInput.val(response.silver_pieces);
      electrumInput.val(response.electrum_pieces);
      goldInput.val(response.gold_pieces);
      platinumInput.val(response.platinum_pieces);
    });
  });
</script>