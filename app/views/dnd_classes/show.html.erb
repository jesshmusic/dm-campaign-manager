<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><%= link_to 'Dashboard', dashboard_path %></li>
    <li class="breadcrumb-item"><%= link_to 'Classes', dnd_classes_path %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @dnd_class.name %></li>
  </ol>
</nav>
<h1>Class: <%= @dnd_class.name %></h1>

<p>
  <strong>Hit die:</strong> d<%= @dnd_class.hit_die %>
</p>
<p>
  <strong>Saving throws:</strong>
  <%= @dnd_class.saving_throws.map {|str| "#{str}"}.join(', ') %>
</p>

<h4>Proficiencies</h4>
<ul class="list-group list-group-flush py-4">
  <% @dnd_class.proficiencies.each do |proficiency| %>
    <li class="list-group-item"><%= proficiency %></li>
  <% end %>
</ul>

<h4>Available Proficiencies</h4>
<ul class="list-group list-group-flush py-4">
  <% @dnd_class.proficiency_choices.each do |proficiency_choice| %>
    <li class="list-group-item">
      <strong>Choose <%= proficiency_choice["number_to_choose"] %> from</strong>
      <ul class="list-group list-group-flush">
        <% proficiency_choice["from"].each do |proficiency| %>
          <li class="list-group-item"><%= proficiency %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_dnd_class_path(@dnd_class), class: "btn btn-success" if policy(@dnd_class).edit? %>
<%= link_to 'Back', dnd_classes_path, class: "btn btn-info" %>
