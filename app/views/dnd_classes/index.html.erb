  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><%= link_to 'Dashboard', dashboard_path %></li>
    <li class="breadcrumb-item active" aria-current="page">Classes</li>
  </ol>
</nav>

<h1>Classes</h1>
<%= render 'shared/search_form', url: dnd_classes_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Hit die</th>
      <th>Saving throws</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dnd_classes.each do |dnd_class| %>
      <tr>
        <td><%= dnd_class.name %></td>
        <td>d<%= dnd_class.hit_die %></td>
        <td><%= dnd_class.saving_throws.map {|str| "#{str}"}.join(', ') %></td>
        <td><%= link_to 'Show', dnd_class, class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_dnd_class_path(dnd_class), class: "btn btn-sm btn-success" if policy(dnd_class).edit? %></td>
        <td><%= link_to 'Destroy', dnd_class, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } if policy(dnd_class).destroy? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

