<% title "Widgets" %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><%= link_to 'Dashboard', v1_dashboard_path %></li>
    <li class="breadcrumb-item active" aria-current="page">Widgets</li>
  </ol>
</nav>

<h1>Widgets</h1>
<%= render 'shared/search_form', url: widgets_path %>

<table>
  <thead>
    <tr>
              <th>Title</th>
              <th>Subtitle</th>
              <th>Content</th>
              <th>Icon</th>
      
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @widgets.each do |widget| %>
      <tr>
                  <td><%= widget.title %></td>
                  <td><%= widget.subtitle %></td>
                  <td><%= widget.content %></td>
                  <td><%= widget.icon %></td>
        
        <td>
          <%= link_to 'Show', widget, class: "btn btn-sm btn-primary" %>
          <%= link_to 'Edit', edit_widget_path(widget), class: "btn btn-sm btn-success" if policy(widget).edit? %>
          <%= link_to 'Destroy', widget, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } if policy(widget).destroy? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
<%= link_to 'New Widget', new_widget_path, class: "btn btn-lg btn-success" if policy(Widget).new? %>
