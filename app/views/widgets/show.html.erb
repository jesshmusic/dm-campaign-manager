<% title "Widget: " + @widget.name %>
<div class="row">
  <div class="col">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><%= link_to 'Dashboard', v1_dashboard_path %></li>
        <li class="breadcrumb-item"><%= link_to 'Widgets', widgets_path %></li>
        <li class="breadcrumb-item active" aria-current="page"><%= @widget.name %></li>
      </ol>
    </nav>
  </div>
</div>
<div class="container">
  <div class="row mb-3 pb-3 border-bottom">
    <div class="col">
      <h1>Widget: <%= @widget.name %></h1>
    </div>
  </div>

  <div class="row mb-3 pb-3 border-bottom">
    <div class="col">
              <p>
          <strong>Title:</strong> <%= @widget.title %> %>
        </p>
              <p>
          <strong>Subtitle:</strong> <%= @widget.subtitle %> %>
        </p>
              <p>
          <strong>Content:</strong> <%= @widget.content %> %>
        </p>
              <p>
          <strong>Icon:</strong> <%= @widget.icon %> %>
        </p>
          </div>
  </div>

  <div class="d-flex align-items-center justify-content-start py-3">
    <%= link_to 'Edit', edit_widget_path(@widget), class: "btn btn-success" if policy(@widget).edit? %>
    <%= link_to 'Back', widgets_path, class: "btn btn-info" %>
  </div>
</div>
