<% title "Player_character: " + @player_character.name %>
<div class="row">
  <div class="col">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><%= link_to 'Dashboard', dashboard_path %></li>
        <li class="breadcrumb-item"><%= link_to 'Player_characters', player_characters_path %></li>
        <li class="breadcrumb-item active" aria-current="page"><%= @player_character.name %></li>
      </ol>
    </nav>
  </div>
</div>
<div class="container">
  <div class="row mb-3 pb-3 border-bottom">
    <div class="col">
      <h1>Player Character: <%= @player_character.name %></h1>
    </div>
  </div>

  <div class="row mb-3 pb-3 border-bottom">
    <div class="col">
              <p>
          <strong>Name:</strong> <%= @player_character.name %>
        </p>
              <p>
          <strong>Description:</strong> <%= @player_character.description %>
        </p>
          </div>
  </div>

  <div class="d-flex align-items-center justify-content-start py-3">
    <%= link_to 'Edit', edit_player_character_path(@player_character), class: "btn btn-success" if policy(@player_character).edit? %>
    <%= link_to 'Back', player_characters_path, class: "btn btn-info" %>
  </div>
</div>
