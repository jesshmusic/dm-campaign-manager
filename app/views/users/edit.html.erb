<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><%= link_to 'Dashboard', v1_dashboard_path %></li>
    <li class="breadcrumb-item"><%= link_to 'Users', users_path %></li>
    <li class="breadcrumb-item active" aria-current="page">Edit IUser</li>
  </ol>
</nav>
<h1>Edit - <small><em><%= @user.name %> <%= @user.username %></em></small></h1>
<% unless @user.confirmed_at? %>
  <h3>Currently waiting confirmation.</h3>
<% end %>
<%= render 'form', user: @user %>
<div class="admin__footer">
  <%= link_to 'Show', user_path, class: "btn btn-success" %>
  <% if current_user.admin? %>
    <%= link_to 'Back', users_path, class: "btn btn-primary" %>
    <%= link_to 'Dashboard', '/dashboard', class: "btn btn-info" %>
  <% end %>
</div>
