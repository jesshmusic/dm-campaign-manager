<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><%= link_to 'Dashboard', dashboard_path %></li>
    <li class="breadcrumb-item active" aria-current="page">Users</li>
  </ol>
</nav>
<h1>Users</h1>
<%= render 'shared/search_form', url: users_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th class="d-none d-lg-table-cell">Campaigns</th>
      <th class="d-none d-lg-table-cell">Player Characters</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.role.capitalize %></td>
        <td class="d-none d-lg-table-cell"><%= user.campaigns.count %></td>
        <td class="d-none d-lg-table-cell">0</td>
        <td>
          <%= link_to 'Show', user, class: "btn btn-sm btn-primary" %>
          <%= link_to 'Edit', edit_user_path(user), class: "btn btn-sm btn-success" if policy(user).edit? %>
          <%= link_to 'Destroy', user, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } if policy(user).destroy? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%== pagy_bootstrap_nav_js(@pagy) if @pagy.pages > 1 %>
