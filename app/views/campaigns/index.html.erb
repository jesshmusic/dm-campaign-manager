<div class="admin">
  <%= render "shared/admin-header" %>
  <div class="container">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><%= link_to 'Dashboard', dashboard_path %></li>
        <li class="breadcrumb-item active" aria-current="page">Campaigns</li>
      </ol>
    </nav>

    <h1>Campaigns</h1>
    <%= render 'shared/search_form', url: campaigns_path %>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>World</th>
          <th>Dungeon Master</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @campaigns.each do |campaign| %>
          <tr>
            <td><%= campaign.name %></td>
            <td><%= campaign.description %></td>
            <td><%= campaign.world %></td>
            <td><%= campaign.user.name %></td>
            <td><%= link_to 'Show', campaign, class: "btn btn-sm btn-primary" %></td>
            <td><%= link_to 'Edit', edit_campaign_path(campaign), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', campaign, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New Campaign', new_campaign_path %>
  </div>
</div>
