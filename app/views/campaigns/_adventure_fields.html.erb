<div class="nested-fields">
  <div class="form-inputs">
    <div class="form-row">
      <div class="col">
        <%= f.input :name %>
      </div>
    </div>
    <div class="form-row">
      <div class="col">
        <%= f.input :description %>
      </div>
    </div>
    <div class="form-row">
      <div class="col">
        <%= f.association :characters,
                          collection: PlayerCharacter.joins(:campaigns).where(campaigns: {id: f.object.campaign.id}),
                          include_blank: false,
                          input_html: { class: "pc-selection" } %>
      </div>
    </div>
    <div class="form-row">
      <div class="col">
        <%= f.association :characters,
                          collection: NonPlayerCharacter.where(user_id: f.object.campaign.user.id),
                          include_blank: false,
                          input_html: { class: "npc-selection" } %>
      </div>
    </div>
    <div class="form-row">
      <div class="col">
        <%= link_to_remove_association "Remove", f, class: "btn btn-warning mb-3" %>
      </div>
    </div>
  </div>
</div>