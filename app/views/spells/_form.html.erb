<%= simple_form_for @spell, validate: true do |form| %>
  <%= form.error_notification %>
  <%= form.error_notification message: form.object.errors[:base].to_sentence if form.object.errors[:base].present? %>
  
  <%= form.input :name %>
  <%= form.input :description %>
  <%= form.input :higher_level %>
  <%= form.input :page %>
  <%= form.input :range %>
  <%= form.input :components %>
  <%= form.input :material %>
  <%= form.input :ritual %>
  <%= form.input :duration %>
  <%= form.input :concentration %>
  <%= form.input :casting_time %>
  <%= form.input :level %>
  
  <%= form.button :submit, class: 'btn btn-success' %>
<% end %>
