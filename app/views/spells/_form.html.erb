<%= bootstrap_form_for @spell do |form| %>
  <% if spell.errors.any? %>
    <%= render 'shared/error-alert', record: spell, record_type: "spell" %>
  <% end %>
  
  <%= form.text_area :name %>
  <%= form.text_area :description %>
  <%= form.text_area :higher_level %>
  <%= form.text_area :page %>
  <%= form.text_area :range %>
  <%= form.text_area :components %>
  <%= form.text_area :material %>
  <%= form.check_box :ritual %>
  <%= form.text_area :duration %>
  <%= form.check_box :concentration %>
  <%= form.text_field :casting_time %>
  <%= form.number_field :level %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
