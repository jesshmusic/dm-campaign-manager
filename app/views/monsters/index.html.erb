<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><%= link_to 'Dashboard', dashboard_path %></li>
    <li class="breadcrumb-item active" aria-current="page">Monsters</li>
  </ol>
</nav>

<h1>Monsters</h1>
<%= render 'shared/search_form', url: monsters_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Size</th>
      <th>Type</th>
      <th>Subtype</th>
      <th>Alignment</th>
      <th>Armor class</th>
      <th>Hit points</th>
      <th>Hit dice</th>
      <th>Challenge rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monsters.each do |monster| %>
      <tr>
        <td><%= monster.name %></td>
        <td><%= monster.size %></td>
        <td><%= monster.monster_type %></td>
        <td><%= monster.monster_subtype %></td>
        <td><%= monster.alignment %></td>
        <td><%= monster.armor_class %></td>
        <td><%= monster.hit_points %></td>
        <td><%= monster.hit_dice %></td>
        <td><%= monster.challenge_rating %></td>
        <td>
          <%= link_to 'Show', monster, class: "btn btn-sm btn-primary" %>
          <%= link_to 'Edit', edit_monster_path(monster), class: "btn btn-sm btn-success" if policy(monster).edit?  %>
          <%= link_to 'Destroy', monster, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } if policy(monster).destroy? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Monster', new_monster_path if policy(Monster).new? %>
