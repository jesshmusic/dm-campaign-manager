<div class="py-4">
  <h1>Dungeon Master's Campaign Manager <small> - Admin Portal</small></h1>
</div>
<% if notice %>
  <div id="notice" class="alert alert-success" role="alert"><%= notice %></div>
<% end %>
<% if alert %>
  <div class="alert alert-danger" role="alert">
    <%= alert %>
  </div>
<% end %>
<% if user_signed_in? %>
  <nav class="navbar navbar-expand-lg">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= active_link_to 'Home', '/', active: :exclusive, class: 'nav-link' %>
      </li>
      <% if current_user.admin? || current_user.moderator? %>
        <li class="nav-item">
          <%= active_link_to 'Dashboard', '/v1/admin', active: :exclusive, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= active_link_to 'Campaigns', campaigns_path, active: :exclusive, class: 'nav-link' %>
        </li>
      <% end %>
      <% if current_user.admin? %>
        <li class="nav-item">
          <%= active_link_to 'Users', users_path, active: :exclusive, class: 'nav-link' %>
        </li>
      <% end %>
    </ul>
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to('Sign Out', destroy_user_session_path, method: :delete) %>
      </li>
    </ul>
  </nav>
<% end %>
