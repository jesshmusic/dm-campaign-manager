<% if notice %>
  <div id="notice" class="alert alert-success" role="alert"><%= notice %></div>
<% end %>
<% if alert %>
  <div class="alert alert-danger" role="alert">
    <%= alert %>
  </div>
<% end %>
<% if user_signed_in? %>
<nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-primary mb-4">
  <a class="navbar-brand" href="#">DM's Campaign Manager</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= active_link_to 'Home', '/', active: :exclusive, class: 'nav-link' %>
      </li>
      <% if current_user.admin? || current_user.dungeon_master? || current_user.player? %>
        <li class="nav-item">
          <%= active_link_to 'Dashboard', dashboard_path, active: :exclusive, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= active_link_to 'Campaigns', campaigns_path, active: :exclusive, class: 'nav-link' %>
        </li>
      <% end %>
      <% if current_user.admin? %>
        <li class="nav-item">
          <%= active_link_to 'Users', users_path, active: :exclusive, class: 'nav-link' %>
        </li>
      <% end %>
    </ul>
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to('Sign Out', destroy_user_session_path, method: :delete) %>
      </li>
    </ul>
  </div>
</nav>
<% end %>
