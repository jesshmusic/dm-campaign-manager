<%= form_tag(url, method: :get, class: "form-inline") do %>
  <div class="form-group mb-2 mr-sm-2 w-100">
    <%= label_tag :search, nil, class: "sr-only" %>
    <div class="input-group mr-sm-2 w-100">
      <%= text_field_tag :search, params[:search], class: "form-control" %>
      <div class="input-group-append">
        <%= link_to url, class: "btn btn-light" do %>
          <%= image_tag 'svg/x.svg' %>
        <% end %>
        <%= submit_tag 'Search', name: nil, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
