<% title "Edit" + @adventure.name %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><%= link_to 'Dashboard', dashboard_path %></li>
    <li class="breadcrumb-item"><%= link_to 'Campaigns', campaigns_path %></li>
    <li class="breadcrumb-item"><%= link_to @campaign.name, campaign_adventures_path(@campaign) %></li>
    <li class="breadcrumb-item active" aria-current="page">Edit Adventures</li>
  </ol>
</nav>
<div class="container">
  <h1>Edit - <small><em><%= @adventure.name %></em></small></h1>
  <%= render 'form', adventure: @adventure %>
  <div class="admin__footer">
    <%= link_to 'Show', campaign_adventure_path(@campaign, @adventure), class: "btn btn-success" %>
    <%= link_to 'Dashboard', '/dashboard', class: "btn btn-info" %>
  </div>
</div>
