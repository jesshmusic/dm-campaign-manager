<div class="nested-fields">
  <div class="form-inputs">
    <div class="form-row">
      <div class="col">
        <%= f.input :number_of_monsters %>
      </div>
      <div class="col">
        <%= f.association :monster,
                          include_blank: false,
                          input_html: { class: "pc-selection" } %>
      </div>
      <div class="col">
        <%= link_to_remove_association "Remove", f, class: "btn btn-warning mb-3" %>
      </div>
    </div>
  </div>
</div>