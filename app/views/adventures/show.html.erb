<% title "Adventure: " + @adventure.name %>
<div class="row">
  <div class="col">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><%= link_to 'Dashboard', dashboard_path %></li>
        <li class="breadcrumb-item"><%= link_to 'Adventures', adventures_path %></li>
        <li class="breadcrumb-item active" aria-current="page"><%= @adventure.name %></li>
      </ol>
    </nav>
  </div>
</div>
<div class="container">
  <div class="row mb-3 pb-3 border-bottom">
    <div class="col">
      <h1>Adventure: <%= @adventure.name %></h1>
    </div>
  </div>

  <div class="row mb-3 pb-3 border-bottom">
    <div class="col">
              <p>
          <strong>Name:</strong> <%= @adventure.name %> %>
        </p>
              <p>
          <strong>Description:</strong> <%= @adventure.description %> %>
        </p>
              <p>
          <strong>Campaign:</strong> <%= @adventure.campaign_id %> %>
        </p>
          </div>
  </div>

  <div class="d-flex align-items-center justify-content-start py-3">
    <%= link_to 'Edit', edit_adventure_path(@adventure), class: "btn btn-success" if policy(@adventure).edit? %>
    <%= link_to 'Back', adventures_path, class: "btn btn-info" %>
  </div>
</div>
