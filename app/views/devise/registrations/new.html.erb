<%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), validate: true do |form| %>
  <%= form.error_notification %>
  <%= form.error_notification message: form.object.errors[:base].to_sentence if form.object.errors[:base].present? %>
  
  <div class="form-inputs">
    <%= form.input :email, required: true, autofocus: true %>
    <%= form.input :name, required: true %>
    <%= form.input :username, required: true %>
    <%= form.input :role,
                   as: :radio_buttons,
                   collection: [['player', 'Player'], ['dugeon_master', 'Dungeon Master']],
                   label_method: :second,
                   value_method: :first %>
    <%= form.input :password, required: true, hint: "#{@minimum_password_length} characters minimum" if @minimum_password_length %>
    <%= form.input :password_confirmation, required: true %>
  </div>
  
  <div class="form-actions">
    <%= form.button :submit, "Sign Up", class: 'btn btn-success' %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
