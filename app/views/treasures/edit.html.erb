<% title "Edit" + @treasure.name %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><%= link_to 'Dashboard', dashboard_path %></li>
    <li class="breadcrumb-item"><%= link_to 'Treasures', treasures_path %></li>
    <li class="breadcrumb-item active" aria-current="page">Edit Treasures</li>
  </ol>
</nav>
<div class="container">
  <h1>Edit - <small><em><%= @treasure.name %></em></small></h1>
  <%= render 'form', treasure: @treasure %>
  <div class="admin__footer">
    <%= link_to 'Show', @treasure, class: "btn btn-success" %>
    <%= link_to 'Back', treasures_path, class: "btn btn-primary" %>
