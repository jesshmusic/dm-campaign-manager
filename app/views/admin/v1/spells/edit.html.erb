<% title "Edit #{@spell.name}" %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><%= link_to 'Dashboard', v1_dashboard_path %></li>
    <li class="breadcrumb-item"><%= link_to 'Spells', v1_spells_path %></li>
    <li class="breadcrumb-item active" aria-current="page">Edit Spell</li>
  </ol>
</nav>
<div class="container">
  <h1>Edit - <small><em><%= @spell.name %></em></small></h1>
  <%= render 'form', spell: @spell %>
  <div class="admin__footer">
    <%= link_to 'Show', v1_spell_path(@spell), class: "btn btn-success" %>
    <%= link_to 'Back', v1_spells_path, class: "btn btn-primary" %>
    <%= link_to 'Dashboard', '/dashboard', class: "btn btn-info" %>
  </div>
</div>
