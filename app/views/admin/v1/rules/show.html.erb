<% title "Rule: " + @rule.name %>
<div class="row">
  <div class="col">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/app/assets/config">Home</a></li>
        <li class="breadcrumb-item"><%= link_to 'Dashboard', v1_dashboard_path %></li>
        <li class="breadcrumb-item"><%= link_to 'Rules', rules_path %></li>
        <li class="breadcrumb-item active" aria-current="page"><%= @rule.name %></li>
      </ol>
    </nav>
  </div>
</div>
<div class="container">
  <div class="row mb-3 pb-3 border-bottom">
    <div class="col">
      <h1>Rule: <%= @rule.name %></h1>
    </div>
  </div>

  <div class="row mb-3 pb-3 border-bottom">
    <div class="col">
              <p>
          <strong>Name:</strong> <%= @rule.name %> %>
        </p>
              <p>
          <strong>Description:</strong> <%= @rule.description %> %>
        </p>
              <p>
          <strong>Slug:</strong> <%= @rule.slug %> %>
        </p>
              <p>
          <strong>String:</strong> <%= @rule.string %> %>
        </p>
          </div>
  </div>

  <div class="d-flex align-items-center justify-content-start py-3">
    <%= link_to 'Edit', edit_rule_path(@rule), class: "btn btn-success" if policy(@rule).edit? %>
    <%= link_to 'Back', rules_path, class: "btn btn-info" %>
  </div>
</div>
