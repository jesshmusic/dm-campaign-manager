<h2>Info</h2>
<div class="form-row">
  <div class="col">
    <%= form.input :alignment,
                   collection: DndRules.alignments,
                   include_blank: false,
                   include_hidden: false %>
  </div>
  <div class="col">
    <%= form.input :race_id,
                    label: 'Race',
                    collection: Race.all,
                    include_blank: false,
                    include_hidden: false %>
  </div>
  <div class="col">
    <%= form.input :xp, label: "Experience Points" %>
  </div>
</div>

<h2>Classes</h2>
<div class="form-row">
  <div class="p-3 border-bottom border-top">
    <%= form.simple_fields_for :character_classes do |p_form| %>
      <%= render 'character_class_fields', f: p_form %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'Add Class', form, :character_classes, class: "btn btn-info" %>
    </div>
  </div>
</div>

<h2>Statistics</h2>
<div class="form-row">
  <div class="col">
    <%= form.input :armor_class %>
  </div>
  <div class="col">
    <%= form.input :hit_points %>
  </div>
</div>

<h3>Ability Scores</h3>
<div class="form-row">
  <div class="col-4 col-md-2">
    <%= form.input :strength %>
  </div>
  <div class="col-4 col-md-2">
    <%= form.input :dexterity %>
  </div>
  <div class="col-4 col-md-2">
    <%= form.input :constitution %>
  </div>
  <div class="col-4 col-md-2">
    <%= form.input :intelligence %>
  </div>
  <div class="col-4 col-md-2">
    <%= form.input :wisdom %>
  </div>
  <div class="col-4 col-md-2">
    <%= form.input :charisma %>
  </div>
</div>

<div class="form-row">
  <div class="col">
    <%= form.input :languages %>
  </div>
</div>
<div class="form-row">
  <div class="col">
    <%= form.input :description %>
  </div>
</div>

