<% title "Edit" + @character.name %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><%= link_to 'Dashboard', v1_dashboard_path %></li>
    <li class="breadcrumb-item"><%= link_to "Campaign: #{@campaign.name}", v1_campaign_path(@campaign) %></li>
    <li class="breadcrumb-item active" aria-current="page">Edit Characters</li>
  </ol>
</nav>
<div class="container">
  <h1>Edit - <small><em><%= @character.name %></em></small></h1>
  <% if @character.type == 'PlayerCharacter' %>
    <%= render 'pc_form' %>
  <% elsif @character.type == 'NonPlayerCharacter' %>
    <%= render 'npc_form' %>
  <% else %>
    <%= render 'form' %>
  <% end %>
  <div class="admin__footer">
    <%= link_to 'Show', v1_campaign_character_path(@campaign, @character), class: "btn btn-success" %>
    <%= link_to 'Back',  v1_campaign_path(@campaign), class: "btn btn-primary" %>
    <%= link_to 'Dashboard', '/dashboard', class: "btn btn-info" %>
  </div>
</div>
