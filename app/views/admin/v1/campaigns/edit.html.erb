<% title "Edit #{@campaign.name}" %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><%= link_to 'Dashboard', v1_dashboard_path %></li>
    <li class="breadcrumb-item"><%= link_to 'Campaigns', v1_campaigns_path %></li>
    <li class="breadcrumb-item"><%= link_to "#{@campaign.user.name}", user_path(slug: @campaign.user.slug) %></li>
    <li class="breadcrumb-item active" aria-current="page">Edit Campaign</li>
  </ol>
</nav>
<h1>Edit - <small><em><%= @campaign.name %></em></small></h1>
<%= render 'form', campaign: @campaign %>
<div class="admin__footer">
  <%= link_to 'Show', v1_campaign_path(@campaign), class: "btn btn-success" %>
  <%= link_to 'Back', v1_campaigns_path, class: "btn btn-primary" %>
  <%= link_to 'Dashboard', '/dashboard', class: "btn btn-info" %>
</div>
