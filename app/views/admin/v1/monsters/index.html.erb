<% title 'Monsters' %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><%= link_to 'Dashboard', v1_dashboard_path %></li>
    <li class="breadcrumb-item active" aria-current="page">Monsters</li>
  </ol>
</nav>

<div class='table-frame'>
  <h1>Monsters</h1>
  <%= render 'shared/search_form', url: v1_monsters_path %>

  <table class='dnd-table'>
    <thead>
      <tr>
        <th scope='col'>Name</th>
        <th scope='col'>Size</th>
        <th scope='col'>Type</th>
        <th scope='col'>Subtype</th>
        <th scope='col'>Alignment</th>
        <th scope='col'>ArmorItems class</th>
        <th scope='col'>Hit points</th>
        <th scope='col'>Hit dice</th>
        <th>Challenge rating</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @monsters.each do |monster| %>
        <tr>
          <td><%= monster.name %></td>
          <td><%= monster.size %></td>
          <td><%= monster.monster_type.titleize %></td>
          <td><%= monster.monster_subtype.titleize %></td>
          <td><%= monster.alignment.titleize %></td>
          <td><%= monster.armor_class %></td>
          <td><%= monster.hit_points %></td>
          <td><%= monster.hit_dice %></td>
          <td><%= monster.challenge_rating %></td>
          <td>
            <%= link_to 'Show', v1_monster_path(monster), class: 'btn btn-sm btn-primary' %>
            <%#= link_to 'Edit', edit_v1_monster_path(monster), class: "btn btn-sm btn-success" if policy(monster).edit? %>
            <%#= link_to 'Destroy', v1_monster_path(monster), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } if policy(monster).destroy? %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
</div>

<%#= link_to 'New Monster', new_v1_monster_path, class: "btn btn-lg btn-success" if policy(Monster).new? %>
