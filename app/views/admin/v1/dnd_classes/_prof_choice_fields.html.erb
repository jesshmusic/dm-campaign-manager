<div class="nested-fields">
  <div class="d-flex align-items-end">
    <%= f.input :name, wrapper_html: {class: 'mr-3' } %>
    <%= f.input :prof_choice_type, wrapper_html: {class: 'mr-3' } %>
    <%= f.input :num_choices, wrapper_html: {class: 'mr-3' } %>
  </div>
  <div class="d-flex align-items-end">
    <%= f.association :profs, input_html: { class: "prof_choice_profs" }, wrapper_html: {class: 'mr-3 flex-grow-1' } %>
    <div>
      <%= link_to_remove_association "Remove", f, class: "btn btn-warning mb-3" %>
    </div>
  </div>
</div>
