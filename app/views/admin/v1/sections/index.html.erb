<% title "sections" %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/app/assets/config">Home</a></li>
    <li class="breadcrumb-item"><%= link_to 'Dashboard', v1_dashboard_path %></li>
    <li class="breadcrumb-item active" aria-current="page">Sections</li>
  </ol>
</nav>

<h1>Sections</h1>
<%= render 'shared/search_form', url: sections_path %>

<table>
  <thead>
    <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Slug</th>

      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
                  <td><%= section.name %></td>
                  <td><%= section.description %></td>
                  <td><%= section.slug %></td>

        <td>
          <%= link_to 'Show', section, class: "btn btn-sm btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
