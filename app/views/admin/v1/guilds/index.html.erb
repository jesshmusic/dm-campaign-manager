<% title "Guilds" %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><%= link_to 'Dashboard', v1_dashboard_path %></li>
    <li class="breadcrumb-item active" aria-current="page">Guilds</li>
  </ol>
</nav>

<h1>Guilds</h1>
<%= render 'shared/search_form', url: guilds_path %>

<table>
  <thead>
    <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Campaign</th>
      
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @guilds.each do |guild| %>
      <tr>
                  <td><%= guild.name %></td>
                  <td><%= guild.description %></td>
                  <td><%= guild.campaign_id %></td>
        
        <td>
          <%= link_to 'Show', guild, class: "btn btn-sm btn-primary" %>
          <%= link_to 'Edit', edit_guild_path(guild), class: "btn btn-sm btn-success" if policy(guild).edit? %>
          <%= link_to 'Destroy', guild, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } if policy(guild).destroy? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
<%= link_to 'New Guild', new_guild_path, class: "btn btn-lg btn-success" if policy(Guild).new? %>
