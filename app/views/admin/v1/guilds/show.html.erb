<% title "Guild: " + @guild.name %>
<div class="row">
  <div class="col">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><%= link_to 'Dashboard', v1_dashboard_path %></li>
        <li class="breadcrumb-item"><%= link_to 'Guilds', v1_campaign_guilds_path(@campaign) %></li>
        <li class="breadcrumb-item active" aria-current="page"><%= @guild.name %></li>
      </ol>
    </nav>
  </div>
</div>
<div class="container">
  <div class="row mb-3 pb-3 border-bottom">
    <div class="col">
      <h1>Guild: <%= @guild.name %></h1>
    </div>
  </div>

  <div class="row mb-3 pb-3 border-bottom">
    <div class="col">
              <p>
          <strong>Name:</strong> <%= @guild.name %> %>
        </p>
              <p>
          <strong>Description:</strong> <%= @guild.description %> %>
        </p>
              <p>
          <strong>Campaign:</strong> <%= @guild.campaign_id %> %>
        </p>
          </div>
  </div>

  <div class="d-flex align-items-center justify-content-start py-3">
    <%= link_to 'Edit', edit_v1_campaign_guild_path(@campaign, @guild), class: "btn btn-success" if policy(@guild).edit? %>
    <%= link_to 'Back', v1_campaign_guilds_path(@campaign), class: "btn btn-info" %>
  </div>
</div>
