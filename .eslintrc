{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "$": true,
    "Audio": true,
    "clearTimeout": true,
    "console": true,
    "dataLayer": true,
    "document": true,
    "btoa": true,
    "fetch": true,
    "FileReader": true,
    "localStorage": true,
    "process": true,
    "Promise": true,
    "requestAnimationFrame": true,
    "setTimeout": true,
    "Set": true,
    "window": true,
    "require": true,
    "module": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "array-bracket-newline": [
      2,
      {
        "minItems": 3
      }
    ],
    "arrow-body-style": 1,
    "arrow-parens": 1,
    "arrow-spacing": 1,
    "block-spacing": 2,
    "brace-style": 1,
    "comma-dangle": [
      1,
      "always-multiline"
    ],
    "comma-spacing": 1,
    "curly": 2,
    "dot-notation": 1,
    "eqeqeq": 2,
    "indent": [
      1,
      2,
      {
        "SwitchCase": 1,
        "ignoredNodes": [
          "JSXAttribute"
        ]
      }
    ],
    "max-len": [
      1,
      120,
      2,
      {
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreUrls": true
      }
    ],
    "no-confusing-arrow": [
      1,
      {
        "allowParens": true
      }
    ],
    "no-console": 0,
    "no-else-return": 1,
    "no-iterator": 1,
    "no-multi-spaces": 1,
    "no-nested-ternary": 2,
    "no-param-reassign": 2,
    "no-plusplus": 1,
    "no-trailing-spaces": 1,
    "no-unneeded-ternary": 1,
    "no-var": 2,
    "object-shorthand": 2,
    "padded-blocks": [
      1,
      "never"
    ],
    "prefer-arrow-callback": 1,
    "prefer-const": 2,
    "prefer-spread": 1,
    "prefer-template": 1,
    "quotes": [
      1,
      "single"
    ],
    "radix": 1,
    "react/jsx-indent-props": [
      1, "first"
    ],
    "semi": 2,
    "space-before-function-paren": 1,
    "space-before-blocks": 1,
    "space-infix-ops": 1,
    "spaced-comment": [
      1,
      "always"
    ],
    "template-curly-spacing": 1
  }
}
