<%% title "<%= singular_table_name.capitalize %>: " + @<%= singular_table_name %>.name %>
<div class="row">
  <div class="col">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><%%= link_to 'Dashboard', v1_dashboard_path %></li>
        <li class="breadcrumb-item"><%%= link_to '<%= plural_table_name.capitalize %>', <%= plural_table_name %>_path %></li>
        <li class="breadcrumb-item active" aria-current="page"><%%= @<%= singular_table_name %>.name %></li>
      </ol>
    </nav>
  </div>
</div>
<div class="container">
  <div class="row mb-3 pb-3 border-bottom">
    <div class="col">
      <h1><%= singular_table_name.capitalize %>: <%%= @<%= singular_table_name %>.name %></h1>
    </div>
  </div>

  <div class="row mb-3 pb-3 border-bottom">
    <div class="col">
      <% attributes.each do |attribute| -%>
        <p>
          <strong><%= attribute.human_name %>:</strong> <%%= @<%= singular_table_name %>.<%= attribute.column_name %> %> %>
        </p>
      <% end -%>
    </div>
  </div>

  <div class="d-flex align-items-center justify-content-start py-3">
    <%%= link_to 'Edit', edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: "btn btn-success" if policy(@<%= singular_table_name %>).edit? %>
    <%%= link_to 'Back', <%= plural_table_name %>_path, class: "btn btn-info" %>
  </div>
</div>
