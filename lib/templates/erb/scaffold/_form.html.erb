<%%= simple_form_for @<%= singular_table_name %>, validate: true do |form| %>
  <%%= form.error_notification %>
  <%%= form.error_notification message: form.object.errors[:base].to_sentence if form.object.errors[:base].present? %>

  <div class="form-inputs">
  <%- attributes.each do |attribute| -%>
    <div class="form-row">
      <div class="col">
        <%%= form.<%= attribute.reference? ? :association : :input %> :<%= attribute.name %> %>
      </div>
    </div>
  <%- end -%>
  </div>

  <div class="form-actions">
    <%%= form.button :submit, class: 'btn btn-success mb-3' %>
  </div>
<%% end %>
